@model WonderlandAdventure.Models.AttractionSchedule
@{
    ViewBag.Title = "Wait Time - " + Model.AttractionName;
}

<div class="schedule-container">
    <h1>@Model.AttractionName</h1>

    <div class="schedule-info">
        <div class="info-card">
            <h2><i class="fas fa-clock"></i> Current Wait Time</h2>
            <p class="wait-time">@Model.CurrentWaitTime minutes</p>
        </div>

        <div class="info-card">
            <h2><i class="fas fa-calendar-alt"></i> Operating Hours</h2>
            <p>@Model.OperatingHours</p>
        </div>

        @if (Model.FastPassAvailable)
        {
            <div class="info-card">
                <h2><i class="fas fa-bolt"></i> FastPass</h2>
                <p>Available for this attraction</p>
                <a href="#" class="btn-fastpass">Get FastPass</a>
            </div>
        }
    </div>

    <div class="back-link">
        @Html.ActionLink("Back to Attractions", "Index", null, new { @class = "btn-back" })
    </div>
</div>

@section styles {
    <style>
        .schedule-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 30px;
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

            .schedule-container h1 {
                color: #ff6b6b;
                text-align: center;
                margin-bottom: 30px;
            }

        .schedule-info {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            gap: 20px;
            margin-bottom: 30px;
        }

        .info-card {
            flex: 1;
            min-width: 200px;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 10px;
            text-align: center;
        }

            .info-card h2 {
                color: #74b9ff;
                margin-bottom: 15px;
                font-size: 1.3rem;
            }

        .wait-time {
            font-size: 2.5rem;
            font-weight: bold;
            color: #ff6b6b;
            margin: 15px 0;
        }

        .btn-fastpass {
            display: inline-block;
            margin-top: 15px;
            padding: 8px 20px;
            background-color: #ffbe76;
            color: white;
            border-radius: 20px;
            text-decoration: none;
            font-weight: bold;
            transition: all 0.3s ease;
        }

            .btn-fastpass:hover {
                background-color: #ffa94d;
                transform: scale(1.05);
            }

        .btn-back {
            display: inline-block;
            padding: 10px 25px;
            background-color: #74b9ff;
            color: white;
            border-radius: 20px;
            text-decoration: none;
            font-weight: bold;
            transition: all 0.3s ease;
        }

            .btn-back:hover {
                background-color: #0984e3;
                transform: scale(1.05);
            }

        .back-link {
            text-align: center;
            margin-top: 30px;
        }
    </style>
}