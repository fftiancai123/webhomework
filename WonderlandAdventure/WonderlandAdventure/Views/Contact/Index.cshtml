@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>Contact WonderLand</h1>
    <p>We'd love to hear from you! Reach out with questions, feedback, or just to say hello.</p>
</div>

<div class="contact-container">
    <div class="contact-form">
        <h2 style="text-align: center; color: #ff6b6b; margin-bottom: 30px;">Send Us a Message</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" style="text-align: center; color: #155724; background-color: #d4edda; border-color: #c3e6cb; padding: 10px; border-radius: 5px; margin-bottom: 20px;">
                @TempData["SuccessMessage"]
            </div>
        }

        @using (Html.BeginForm("SubmitForm", "Contact", FormMethod.Post))
        {
            <div class="form-group">
                @Html.Label("name", "Your Name")
                @Html.TextBox("name", null, new { @class = "form-control", placeholder = "Enter your name", required = "required" })
            </div>

            <div class="form-group">
                @Html.Label("contact", "Contact Information")
                @Html.TextBox("contact", null, new { @class = "form-control", placeholder = "Email or phone number", required = "required" })
            </div>

            <div class="form-group">
                @Html.Label("feedback", "Your Feedback or Question")
                @Html.TextArea("feedback", null, new { @class = "form-control", placeholder = "Type your message here...", rows = "6", required = "required" })
            </div>

            <button type="submit" class="btn-submit">Send Message</button>
        }
    </div>

    <div class="contact-info">
        <div class="info-card">
            <div class="info-icon">
                <i class="fas fa-map-marker-alt"></i>
            </div>
            <h3>Visit Us</h3>
            <p>
                123 Fantasy Lane<br>
                Orlando, FL 32830<br>
                United States
            </p>
        </div>

        <div class="info-card">
            <div class="info-icon">
                <i class="fas fa-phone-alt"></i>
            </div>
            <h3>Call Us</h3>
            <p>
                General Inquiries: +1 (800) 555-1234<br>
                Group Sales: +1 (800) 555-5678<br>
                Guest Services: +1 (800) 555-9012
            </p>
        </div>

        <div class="info-card">
            <div class="info-icon">
                <i class="fas fa-envelope"></i>
            </div>
            <h3>Email Us</h3>
            <p>
                General: info@wonderland.com<br>
                Support: help@wonderland.com<br>
                Groups: groups@wonderland.com
            </p>
        </div>
    </div>
</div>