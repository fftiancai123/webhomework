<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Admin Dashboard</title>
    <link href="~/Content/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    @RenderSection("styles", required: false)
</head>
<body>
    <header>
        <div class="user-actions">
            @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()
                <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-logout">Logout</a>
            }
            @Html.ActionLink("Profile", "Profile", "Admin", null, new { @class = "btn btn-profile" })
        </div>
        <div class="logo">WonderLand Adventures</div>
        <div class="slogan">Admin Dashboard</div>
    </header>

    <nav>
        @Html.ActionLink("Dashboard", "Index", "Admin", null, new { @class = "nav-item", id = "dashboard" })
        @Html.ActionLink("Reports", "Reports", "Admin", null, new { @class = "nav-item", id = "reports" })
        @Html.ActionLink("Staff", "Staff", "Admin", null, new { @class = "nav-item", id = "staff" })
        @Html.ActionLink("Settings", "Settings", "Admin", null, new { @class = "nav-item", id = "settings" })
        @Html.ActionLink("Messages", "Messages", "Admin", null, new { @class = "nav-item", id = "messages" })
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h3>WonderLand Adventures</h3>
                <p>Administrative dashboard for park management and operations monitoring.</p>
            </div>

            <div class="footer-section">
                <h3>Quick Links</h3>
                @Html.ActionLink("Daily Reports", "Reports", "Admin")
                @Html.ActionLink("Staff Management", "Staff", "Admin")
                @Html.ActionLink("Revenue Analytics", "Reports", "Admin")
                @Html.ActionLink("System Settings", "Settings", "Admin")
                @Html.ActionLink("Help Center", "Index", "Help")
            </div>

            <div class="footer-section">
                <h3>Support</h3>
                <a href="#"><i class="fas fa-envelope"></i> Admin Support</a>
                <a href="#"><i class="fas fa-phone"></i> Emergency Line</a>
                <a href="#"><i class="fas fa-file-alt"></i> Documentation</a>
            </div>
        </div>

        <div class="copyright">
            <p>&copy; @DateTime.Now.Year WonderLand Adventures. All Rights Reserved. | Admin Dashboard v2.4.1</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>